<% provide :title, t(".title") %>
<div class="page-login">
  <div class="wrap-breadcrumb">
    <ul>
      <li class="item-link"><a href="#" class="link"><%= t ".home" %></a></li>
      <li class="item-link"><span><%= t ".title" %></span></li>
    </ul>
  </div>
  <div class="row">
    <div class="col-lg-6 col-sm-6 col-md-6 col-xs-12 col-md-offset-3">
      <div class=" main-content-area">
        <div class="wrap-login-item ">
          <div class="login-form form-item form-stl">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <div class="field">
                <%= f.label :name %><br />
                <%= f.text_field :name, autofocus: true, autocomplete: t(".name") %>
              </div>

              <div class="field">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                <small class="text-danger">
                  <%= "Email #{resource.errors[:email][0]}" if !resource.errors[:email].empty? %>
                </small>
              </div>

              <div class="field">
                <%= f.label :password %>
                <%= f.password_field :password, autocomplete: "new-password" %>
                <small class="text-danger">
                  <%= "#{t(".password")} #{resource.errors[:password][0]}" if !resource.errors[:password].empty? %>
                </small>
              </div>

              <div class="field">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                <small class="text-danger">
                  <%= "#{t(".password")} #{resource.errors[:password_confirmation][0]}" if !resource.errors[:password_confirmation].empty? %>
                </small>
              </div>

              <div class="actions">
                <%= f.submit t(".sign_up"), class: "btn btn-primary btn-submit" %>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
