<div class="row justify-content-center mb-5">
  <div class="col-md-4">
    <h2 class="text-center"><%= t "devises.forgot_password" %></h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

      <div class="field form-group">
        <%= f.label :email, t("devises.email") %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        <%= render partial: "devise/shared/error_messages_for_field", locals: {object: resource, attr: :email} %>
      </div>

      <div class="actions form-group">
        <%= f.submit t("devises.send_reset_password_instructions"), class: "btn btn-info d-block w-100" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
