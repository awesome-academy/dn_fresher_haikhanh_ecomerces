<div class="row">
  <div class="col-md-4">
    <%= search_form_for @q, url: admin_products_path do |f| %>
      <div class="row">
        <div class="col-md-8">
          <%= f.search_field :name_or_description_cont, class: "form-control bg-white small", placeholder: t(".search_by_name_or_description") %>
        </div>
        <div class="col-md-4 pl-0">
          <div class="input-group-append">
            <%= f.submit t("admin.search"), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>

  </div>
</div>

<div class="row mt-3">
  <div class="col">
    <%= link_to t(".add_product"), new_admin_product_path, class: "btn btn-success" %>
  </div>
</div>

<% if @products.any? %>
  <table class="table table-bordered table-hover table-inverse mt-4">
    <thead class="thead-inverse|thead-default">
      <tr>
        <th><%= sort_link @q, :name, t(".name"), default_order: :desc %></th>
        <th><%= sort_link @q, :price, t(".price"), default_order: :desc %></th>
        <th><%= sort_link @q, :quantity, t(".quantity"), default_order: :desc %></th>
        <th><%= t ".description" %></th>
        <th><%= t ".image" %></th>
        <th class="col-md-2"><%= t ".action" %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @products %>
    </tbody>
  </table>
  <%== pagy_bootstrap_nav @pagy %>
<% else %>
  <div class="alert alert-warning mt-4">
    <strong><%= t ".no_product_found" %></strong>
  </div>
<% end %>
