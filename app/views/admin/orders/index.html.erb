<div class="mb-4">
  <%= form_with url: admin_orders_path, method: :get do |form| %>
    <div class="row">
      <div class="col-md-3">
        <%= form.label :name, t(".name") %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
      <div class="col-md-3">
        <%= form.label :status, t(".status") %>
        <%= select_tag :status, options_for_select(get_order_statuses), class: "form-control" %>
      </div>
      <div class="col-md-3">
        <label class="d-block">&nbsp;</label>
        <%= form.submit t("admin.search"), class: "btn btn-primary"%>
      </div>
    </div>
  <% end %>
  <div class="mt-3">
    <%= link_to t(".clear_search"), admin_orders_path, class: "btn btn-outline-primary config-showall" %>
  </div>
</div>

<% if @orders.any? %>
  <table class="table table-bordered table-hover">
    <thead class="thead-inverse|thead-default">
      <tr>
        <th><%= t ".user_name" %></th>
        <th><%= t ".address" %></th>
        <th><%= t ".created_at" %></th>
        <th><%= t ".status" %></th>
        <th><%= t ".total_price" %></th>
        <th><%= t ".action" %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @orders %>
    </tbody>
  </table>
  <%== pagy_bootstrap_nav(@pagy) %>
<% else %>
  <div class="alert alert-warning mt-4">
    <strong><%= t ".no_order_found" %></strong>
  </div>
<% end %>
