<tr>
  <td>
    <p>
      <%= order.user_name %><br>
      <%= order.address_phone %>
    </p>
  </td>
  <td><%= order.address_address_detail %></td>
  <td><%= order.created_at %></td>
  <td>
    <%= form_tag admin_order_path(order), method: :patch do %>
      <%= select_tag :status, options_for_select(Settings.order.status, selected: Settings.order.status[order.status.to_i]), class: "form-control" %>
      <%= submit_tag t(".save_change"), class: "btn btn-info mt-2"%>
    <% end %>
  </td>
  <td><%= number_to_currency(order.calculate_total, locale: :vi) %></td>
  <td class="text-center">
    <%= link_to admin_order_order_details_path(order) do %>
      <i class="fas fa-eye"></i>
    <% end %>
  </td>
</tr>
