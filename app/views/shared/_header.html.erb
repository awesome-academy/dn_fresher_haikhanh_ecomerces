<header id="header" class="header header-style-1">
  <div class="container-fluid">
    <div class="row">
      <div class="topbar-menu-area">
        <div class="container">
          <div class="topbar-menu left-menu">
            <ul>
              <li class="menu-item" >
                <span class="icon label-before fa fa-mobile"></span>
                <%= link_to t(".hot_line"), "#" %>
              </li>
            </ul>
          </div>
          <div class="topbar-menu right-menu">
            <ul>
              <li class="menu-item">
                <%= link_to t(".login"), "login_path" %>
              </li>
              <li class="menu-item">
                <%= link_to t(".sign_up"), "signup_path" %>
              </li>
              <li class="menu-item lang-menu">
                <%= link_to locale: :en do %>
                  <span class="img label-before">
                    <%= image_tag("lang-en.png", alt: "lang-en") %>
                  </span>
                  <%= t("languages.en") %>
                <% end %>
              </li>
              <li class="menu-item lang-menu">
                <%= link_to locale: :vi do %>
                  <span class="img label-before">
                    <%= image_tag("lang-en.png", alt: "lang-en") %>
                  </span>
                  <%= t("languages.vi") %>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="container">
        <div class="mid-section main-info-area">
          <div class="wrap-logo-top left-section">
            <%= link_to t(".logo_text"), static_pages_home_path, class: "logo_link" %>
          </div>
          <div class="wrap-search center-section">
            <div class="wrap-search-form">
              <%= form_with url: "", id: "form-search-top", method: :get do |form| %>
                <%= form.text_field :query, name: "search", placeholder: "Search here" %>
                <%= form.button do %>
                  <i class="fa fa-search" aria-hidden="true"></i>
                <% end %>
              <% end %>
            </div>
          </div>
          <div class="wrap-icon right-section">
            <div class="wrap-icon-section minicart">
              <%= link_to "#", class: "link-direction" do %>
                <i class="fa fa-shopping-basket" aria-hidden="true"></i>
                <div class="left-info">
                  <span class="index">4 <%= t ".cart_item"%></span>
                  <span class="title"><%= t ".cart" %></span>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="nav-section header-sticky">
        <div class="header-nav-section">
          <div class="container">
            <ul class="nav menu-nav clone-main-menu" id="mercado_haead_menu" data-menuname="Sale Info" >
              <li class="menu-item">
                <%= link_to t(".item_hot"), "#", class: "link-term" %>
                <span class="nav-label hot-label">hot</span>
              </li>
              <li class="menu-item">
                <%= link_to t(".item_new"), "#", class: "link-term" %>
                <span class="nav-label hot-label">hot</span>
              </li>
            </ul>
          </div>
        </div>
        <div class="primary-nav-section">
          <div class="container">
            <ul class="nav primary clone-main-menu" id="mercado_main" data-menuname="Main menu" >
              <li class="menu-item home-icon">
                <a href="index.html" class="link-term mercado-item-title"><i class="fa fa-home" aria-hidden="true"></i></a>
              </li>
              <li class="menu-item">
                <%= link_to t(".about_us"), "#", class: "link-term mercado-item-title" %>
              </li>
              <li class="menu-item">
                <%= link_to t(".shop"), "#", class: "link-term mercado-item-title" %>
              </li>
              <li class="menu-item">
                <%= link_to t(".cart"), "#", class: "link-term mercado-item-title" %>
              </li>
              <li class="menu-item">
                <%= link_to t(".contact"), "#", class: "link-term mercado-item-title" %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
